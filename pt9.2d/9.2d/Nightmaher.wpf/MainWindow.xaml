<Window x:Class="Nightmaher.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nightmaher.wpf"
        mc:Ignorable="d"
        Title="Nightmaher WinForms Version" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="200" Margin="0,50,0,0" VerticalAlignment="Top" Width="750">
            <TextBlock x:Name="mainConsole" TextWrapping="Wrap" Text="TextBlock" Margin="10,10,0,0"/>
        </Border>
        <Button x:Name="enterButton" Content="Enter" HorizontalAlignment="Left" Margin="697,273,0,0" VerticalAlignment="Top" Width="74" Height="23" Click="EnterButton_Click"/>
        <TextBox x:Name="commandBox" HorizontalAlignment="Left" Height="23" Margin="21,273,0,0" TextWrapping="Wrap" Text="Command" VerticalAlignment="Top" Width="649" TextChanged="CommandBox_TextChanged"/>
    </Grid>
</Window>
